    "./lib/setter/index.js": "./lib/setter/client.js"
  },
  "devDependencies": {
    "mocha": "^1.20.0",
    "chai": "^1.9.1",
    "sinon": "^1.10.0",
    "superagent": "^0.18.0",
    "browserify": "^4.1.6",
    "http-server": "^0.6.1"
  }
